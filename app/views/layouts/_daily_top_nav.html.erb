<nav class="navbar navbar-default" id="dailyTopNav" role="navigation">
  <div class="container-fluid container">
    <div class="row">
      <div class="col-xs-12">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "The Daily Debate", root_path, :class => "navbar-brand"  %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <ul class="nav navbar-nav navbar-right">
          <li>
            <% if current_user %>
              <a href="#">
                <img class="avatar profileAvatar" src="https://graph.facebook.com/<%= current_user.uid %>/picture?width=64&height=64" height="22px">
                &nbsp;
                <%= current_user.name %>
              </a>
            <% else %>
              <div class="nav navbar-nav navbar-right">
                <%= link_to 'Subscribe', "#", class: "btn btn-primary navbar-btn subscribeBtn" %>
              </div>
              <%= form_for User.new, remote: true, html: {class: "navbar-form navbar-right hidden subscribeForm"} do |f| %>
                <div class="form-group">
                  <%= f.text_field :email, class: "form-control", placeholder: "me@gmail.com" %>
                  <%= f.hidden_field :is_subscribed, value: "true" %>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              <% end %>
              <p class="subscribeSuccessMsg hidden">You're subscribed!</p>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</nav>
