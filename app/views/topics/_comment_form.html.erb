<%= form_for Comment.new, class: "commentForm" do |f| %>
  <%= f.hidden_field :topic_id, value: @topic.id %>
  <%= f.hidden_field :is_agree, value: is_agree %>
  <div class="form-group">
    <% placeholder_text = is_agree ? "Why do you agree?" : "Why do you disagree?" %>
    <%= f.text_area :content, rows: 2, class: "form-control", placeholder: placeholder_text %>
  </div>
  <%= f.submit class: "submitCommentBtn btn btn-small btn-primary hidden", value: "Post" %>
<% end %>
