<%= form_for @topic do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:
      </h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, placeholder: "Religion causes wars.", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Categories</label>
    <select
      id="categories"
      multiple
      placeholder="Type a username to add a collaborator">
    </select>
    <%= f.hidden_field :categories, id: "topic_categories" %>
  </div>
  <div class="actions">
    <%= f.submit "Post Statement", class: "btn btn-primary" %>
  </div>
<% end %>
