<%= form_for @topic do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <p>
        Ruh-roh! We need you to change something with your opinion:
      </p>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><strong><%= message %></strong></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Opinion</label>
    <%= f.text_field :title, placeholder: "Religion causes wars.", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Categories</label> <small class="text-muted">Helps relevant people discover your opinion.</small>
    <select
      id="categories"
      multiple
      placeholder="Choose from existing categories, or add your own.">
    </select>
    <%= f.hidden_field :categories, id: "topic_categories" %>
  </div>
  <div class="actions">
    <%= f.submit "Post Opinion", class: "btn btn-primary" %>
  </div>
<% end %>
